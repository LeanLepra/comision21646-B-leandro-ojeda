<%- include('partials/header') -%>
    <header class="d-flex justify-content-center">
        <h1>FORO PERSONALIZADO PARA CONTENIDO MULTITEMATICO</h1>
    </header>
    <main class="d-flex flex-column align-items-center">
        <button type="button" class="btn btn-dark" id="btn-new">Nuevo Posteo</button>
        <div class="container text-center">
            <div class="row" id="container-row">
                <% viewForo.forEach(foro => { %>

                    <article class="col-4 d-flex justify-content-center mb-3" data-id="<%= foro.id %>">
                        <div class="card" style="width: 18rem;">
                            <img src="<%= foro.image %>" class="card-img-top" alt="Nuevo titulo">
                            <div class="card-body">
                                <h5 class="card-title"><%= foro.title %></h5>
                                <p class="card-text"><%= foro.content %></p>
                                <div>
                                    <button class="btn btn-dark" id="btn-edit">Editar</button>
                                    <button type="" class="btn btn-danger" id="btn-delete">Borrar</button>
                                </div>
                            </div>
                        </div>
                    </article>

                <% }) %>
            </div>
        </div>

        <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Posteo</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="formulario">
                            <div class="mb-3">
                                <label for="inputTitle" class="col-form-label">TÃ­tulo:</label>
                                <input type="text" class="form-control" id="inputTitle">
                            </div>
                            <div class="mb-3">
                                <label for="inputContent" class="col-form-label">Contenido:</label>
                                <input type="text" class="form-control" id="inputContent">
                            </div>
                            <div class="mb-3">
                                <label for="inputImage" class="col-form-label">Imagen URL:</label>
                                <input type="url" class="form-control" id="inputImage">
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                                <button type="submit" class="btn btn-dark" id="btn-save"></button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </main>

<%- include('partials/footer') -%>